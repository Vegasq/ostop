    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug ostop (local OpenSearch)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "args": [
                "--endpoint",
                "http://localhost:9200"
            ],
            "console": "integratedTerminal",
            "showLog": true
        },
        {
            "name": "Debug ostop (custom endpoint)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "args": [
                "--endpoint",
                "${input:endpoint}",
                "--region",
                "${input:region}"
            ],
            "console": "integratedTerminal",
            "showLog": true
        },
        {
            "name": "Attach to Process",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "processId": "${command:pickProcess}"
        }
    ],
    "inputs": [
        {
            "id": "endpoint",
            "type": "promptString",
            "description": "OpenSearch endpoint URL",
            "default": "http://localhost:9200"
        },
        {
            "id": "region",
            "type": "promptString",
            "description": "AWS region (leave empty for local)",
            "default": ""
        }
    ]
}
